<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="RnapAppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/page_in_from_right</item>
        <!-- 当前activity打开时，进入的activity的动画 -->
        <item name="android:activityCloseEnterAnimation">@anim/page_stay_still</item>
        <!-- 当前activity关闭时，进入的activity的动画 -->
        <item name="android:activityOpenExitAnimation">@anim/page_stay_still</item>
        <!-- 当前activity打开时，退出的activity的动画 -->
        <item name="android:activityCloseExitAnimation">@anim/page_out_to_right</item>
        <!-- 当前activity关闭时，退出的activity的动画 -->
    </style>

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="stationDetailRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/station_detail_rating_bg</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">25dip</item>
        <item name="android:isIndicator">true</item>
    </style>

</resources>