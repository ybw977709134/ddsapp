<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/page_topbar_height" >

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:onClick="leftClicked"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="网点说明"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_normal2" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <TextView
        android:id="@+id/help_list_text1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="办事点"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_normal2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/help_list_text2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="自助机"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_normal2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/help_list_text3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="照相馆"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_normal2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color" />

</LinearLayout>