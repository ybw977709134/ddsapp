<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_white_bg"
    android:paddingBottom="32dp" >

    <ImageView
        android:id="@+id/dialog_success_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/success_img" />

    <TextView
        android:id="@+id/dialog_success_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_success_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_giant" />

</RelativeLayout>