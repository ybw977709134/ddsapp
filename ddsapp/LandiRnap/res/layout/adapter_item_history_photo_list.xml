<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:paddingBottom="15dp"
    android:paddingTop="15dp" >

    <ImageView
        android:id="@+id/history_photo_image"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:background="#f5f5f5"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/history_photo_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/history_photo_image"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/history_photo_image"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_normal2" />

    <TextView
        android:id="@+id/history_photo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/history_photo_score"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/history_photo_image"
        android:textColor="@color/text_gray"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/history_photo_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/history_photo_image"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/history_photo_image"
        android:textColor="@color/text_gray"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/history_photo_is_recent_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:src="@drawable/is_recent_photo_icon"
        android:visibility="gone" />

</RelativeLayout>