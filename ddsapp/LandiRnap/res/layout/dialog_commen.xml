<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="160dp"
    android:background="@drawable/dialog_white_bg" >

    <TextView
        android:id="@+id/commen_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_normal2" />

    <TextView
        android:id="@+id/commen_dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commen_dialog_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/commen_dialog_left_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_bg"
            android:text="取消"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_size_normal2" />

        <Button
            android:id="@+id/commen_dialog_right_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_bg"
            android:text="确认"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_size_normal2" />
    </LinearLayout>

</RelativeLayout>