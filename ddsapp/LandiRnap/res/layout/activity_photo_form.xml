<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/page_topbar_height" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@color/white"
            android:onClick="leftClicked"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="证照详情"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_normal2" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="195dp"
                android:background="#f5f5f5" >

                <ImageView
                    android:id="@+id/photo_detail_commen_photo"
                    android:layout_width="116dp"
                    android:layout_height="155dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/user_default_bg" />

                <TextView
                    android:id="@+id/photo_detail_affair_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/photo_detail_commen_photo"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@+id/photo_detail_commen_photo"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/photo_detail_affair_code"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/photo_detail_affair_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/photo_detail_commen_photo"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_normal2" />

                <TextView
                    android:id="@+id/photo_detail_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/photo_detail_photo_size"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/photo_detail_commen_photo"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_normal2" />

                <TextView
                    android:id="@+id/photo_detail_photo_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/photo_detail_photo_score"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/photo_detail_commen_photo"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_normal2" />

                <TextView
                    android:id="@+id/photo_detail_photo_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/photo_detail_commen_photo"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/photo_detail_commen_photo"
                    android:background="@drawable/dialog_white_bg"
                    android:padding="7dp"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_size_normal2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/line_color" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="证照规格"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/photo_detail_show_affair_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/text_blue" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="提交日期"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/photo_detail_commit_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/text_gray" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/photo_detail_landi_code_rellay"
                android:layout_width="fill_parent"
                android:layout_height="60dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="蓝证码"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/photo_detail_landi_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/text_blue" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="拍摄地址"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/photo_detail_commit_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/text_gray" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.8dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="14dp"
                android:background="#f5f5f5" />

            <TextView
                android:id="@+id/download_btn"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_btn_bg"
                android:gravity="center"
                android:text="保存到相册"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_normal2" />

            <TextView
                android:id="@+id/delete_btn"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/red_text_bg"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal2" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>