<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="140dp" >

            <ImageView
                android:id="@+id/left_menu_usericon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_default_icon" />

            <TextView
                android:id="@+id/left_menu_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/left_menu_usericon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="点击登录，体验更多"
                android:textColor="@color/text_blue" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#d3d8da" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left_menu_photo_rellay"
            android:layout_width="fill_parent"
            android:layout_height="67dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/left_menu_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:text="我的证照"
                android:textColor="@color/text_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#d3d8da" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left_menu_order_rellay"
            android:layout_width="fill_parent"
            android:layout_height="67dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/left_menu_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:text="我的事务"
                android:textColor="@color/text_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#d3d8da" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left_menu_lbs_rellay"
            android:layout_width="fill_parent"
            android:layout_height="67dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/left_menu_lbs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:text="网点查询"
                android:textColor="@color/text_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#d3d8da" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left_menu_freeback_rellay"
            android:layout_width="fill_parent"
            android:layout_height="67dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/left_menu_freeback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:text="意见反馈"
                android:textColor="@color/text_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#d3d8da" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left_menu_help_rellay"
            android:layout_width="fill_parent"
            android:layout_height="67dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/left_menu_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:text="帮助中心"
                android:textColor="@color/text_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#d3d8da" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left_menu_about_rellay"
            android:layout_width="fill_parent"
            android:layout_height="67dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/left_menu_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:text="关于我们"
                android:textColor="@color/text_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#d3d8da" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>