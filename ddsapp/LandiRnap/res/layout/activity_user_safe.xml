<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/page_topbar_height"
        android:background="@color/white" >

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:onClick="leftClicked"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="安全设置"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_normal2" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="105dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_safe_progressbar"
            android:layout_alignLeft="@+id/user_safe_progressbar"
            android:layout_marginBottom="10dp"
            android:text="您的安全等级"
            android:textColor="#ababab"
            android:textSize="@dimen/text_size_normal2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_safe_progressbar"
            android:layout_alignRight="@+id/user_safe_progressbar"
            android:layout_marginBottom="10dp"
            android:text="弱"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_normal2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/user_safe_progressbar"
            android:layout_below="@+id/user_safe_progressbar"
            android:layout_marginTop="10dp"
            android:text="弱"
            android:textColor="#ababab"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/user_safe_progressbar"
            android:layout_below="@+id/user_safe_progressbar"
            android:layout_marginTop="10dp"
            android:text="强"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_normal" />

        <ProgressBar
            android:id="@+id/user_safe_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/text_gray"
            android:max="100"
            android:progress="30"
            android:progressDrawable="@drawable/user_safe_progressbar_bg1" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#f5f5f5"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="完善您的信息可保证您的账户安全"
        android:textColor="#ababab"
        android:textSize="@dimen/text_size_normal2" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:background="@color/white" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:background="@color/line_color" />

        <ImageView
            android:id="@+id/user_safe_pwd_grade_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/user_safe_grade_icon1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_safe_pwd_grade_icon"
            android:text="密码强度"
            android:textColor="#afb3b3"
            android:textSize="@dimen/text_size_normal2" />

        <TextView
            android:id="@+id/user_safe_pwd_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/user_safe_change_pwd"
            android:text="弱"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_normal2" />

        <TextView
            android:id="@+id/user_safe_change_pwd"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/user_safe_bind_phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/user_safe_grade_icon3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_safe_bind_phone_icon"
            android:text="绑定手机号"
            android:textColor="#afb3b3"
            android:textSize="@dimen/text_size_normal2" />

        <TextView
            android:id="@+id/user_safe_bind_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_normal2" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/user_safe_papers_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/user_safe_grade_icon3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_safe_papers_icon"
            android:text="证件信息"
            android:textColor="#afb3b3"
            android:textSize="@dimen/text_size_normal2" />

        <TextView
            android:id="@+id/user_safe_papers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="已完善"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_normal2" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

</LinearLayout>